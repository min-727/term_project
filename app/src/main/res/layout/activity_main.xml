<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- 1. 년도/월 선택 버튼 (상단 중앙) -->
    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025년 5월"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 2. 감정 분석 버튼 (오른쪽 상단) -->
    <Button
        android:id="@+id/btnAnalyzeEmotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감정 분석"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- 3. 캘린더 뷰 (중앙) -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@id/btnSelectDate"
        app:layout_constraintBottom_toTopOf="@id/btnWriteToday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- 4. 오늘 일기 쓰기 버튼 (가운데 하단) -->
    <Button
        android:id="@+id/btnWriteToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일기 쓰기"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"/>

    <!-- 5. 홈(캘린더)로 이동 버튼 (왼쪽 하단) -->
    <Button
        android:id="@+id/btnGoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"/>

    <!-- 6. 일기 목록 보기 버튼 (오른쪽 하단) -->
    <Button
        android:id="@+id/btnDiaryList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일기 목록"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
